file = {:C$\backslash$:/Users/panov/Documents/Mendeley Desktop/PLoS Computational Biology/Oizumi, Albantakis, Tononi/Oizumi, Albantakis, Tononi - 2014 - From the Phenomenology to the Mechanisms of Consciousness Integrated Information Theory 3.0(2).pdf:pdf;:C$\backslash$:/Users/panov/Documents/Mendeley Desktop/PLoS Computational Biology/Oizumi, Albantakis, Tononi/Oizumi, Albantakis, Tononi - 2014 - From the Phenomenology to the Mechanisms of Consciousness Integrated Information Theory 3.0.pdf:pdf},
issn = {1553-7358},
journal = {PLoS Computational Biology},
number = {5},
pages = {e1003588},
title = {{From the Phenomenology to the Mechanisms of Consciousness: Integrated Information Theory 3.0}},
