doi = {10.1186/1471-2202-5-42},
file = {:C$\backslash$:/Users/panov/Documents/Mendeley Desktop/BMC neuroscience/Tononi/Tononi - 2004 - An information integration theory of consciousness.pdf:pdf},
issn = {1471-2202},
journal = {BMC neuroscience},
